{% extends "@MaterialDashboard/base.html.twig" %}

{% block meta_title %}User index{% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-warning">
                        <h4 class="card-title">User index <a href="{{ path('user_new') }}" class="btn btn-primary pull-right">Create new</a></h4>
                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-hover">
                                <thead class="text-warning">
                                    <tr>
                                        <th>Id</th>
                                        <th>Email</th>
                                        <th>Roles</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.email }}</td>
                                        <td><ul>{% for role in user.roles %}<li>{{ role }}</li>{% endfor %}</ul></td>
                                        <td>
                                            <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-success">Show</a>
                                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-info">Edit</a>
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="5">no records found</td>
                                    </tr>
                                    {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
