{% extends "landing.html.twig" %}

{% block meta_title %}Log in!{% endblock %}

{% block body %}
<div class="row align-items-center">
    <div class="col-md-9 ml-auto mr-auto mb-3 text-center">
        <h3>Log in to see how you can speed up your web development with out of the box CRUD for #User Management and more. </h3>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
        <form method="post">
            <input type="hidden" name="_token" value="DUo9p4bTP9AM6OP5fjyxL2bbR4Eq02m1eMb5VSsQ">
            <div class="card card-login mb-3">
                <div class="card-header card-header-primary text-center">
                    <h4 class="card-title"><strong>Login</strong></h4>
                    {% if error %}
                    <div class="alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <i class="material-icons">close</i>
                        </button>
                        <span>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </span>
                    </div>
                    {% endif %}
                    {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <i class="material-icons">close</i>
                        </button>
                        <span>
                            <b> Success - </b> {{ message }}
                        </span>
                    </div>
                    {% endfor %}
                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}<br> <a class="btn btn-sm btn-info" href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                </div>
                <div class="card-body">
                    <div class="bmd-form-group is-filled">
                        <div class="input-group">
                            <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="material-icons">email</i>
                            </span>
                            </div>
                            <input type="email" class="form-control" placeholder="Email..." value="{{ last_username }}" name="email" required="">
                        </div>
                    </div>
                    <div class="bmd-form-group mt-3 is-filled">
                        <div class="input-group">
                            <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="material-icons">lock_outline</i>
                            </span>
                            </div>
                            <input type="password" name="password" id="password" class="form-control" placeholder="Password..." value="secret" required="">
                        </div>
                    </div>
                    <div class="form-check mr-auto ml-3 mt-3">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="_remember_me"> Remember me
                            <span class="form-check-sign">
                            <span class="check"></span>
                            </span>
                        </label>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                <div class="card-footer justify-content-center">
                    <button type="submit" class="btn btn-primary btn-link btn-lg">Lets Go</button>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-6">
                <a href="{{ path("app_reset_password") }}" class="text-light">
                    <small>Forgot password?</small>
                </a>
            </div>
            <div class="col-6 text-right">
                <a href="{{ path("app_register") }}" class="text-light">
                    <small>Create new account</small>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
